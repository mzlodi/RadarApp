<Window x:Class="RadarApp.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to Radar" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Radar IP Address:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="IpAddressTextBox" FontSize="14" Margin="0,0,0,10"/>
            <Button Content="Connect" Name="ConnectButton" FontSize="14" Width="100" 
                    HorizontalAlignment="Center" Click="ConnectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>